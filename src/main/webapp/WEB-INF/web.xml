<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <servlet>
        <servlet-name>DefaultInit</servlet-name>
        <servlet-class>ireader.server.InitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>StartTime</servlet-name>
        <servlet-class>ireader.server.StartTimeSvlt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Auth</servlet-name>
        <servlet-class>ireader.server.AuthSvlt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Drive</servlet-name>
        <servlet-class>ireader.server.DriveSvlt</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StartTime</servlet-name>
        <url-pattern>/start-time/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Auth</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Drive</servlet-name>
        <url-pattern>/drive/*</url-pattern>
    </servlet-mapping>


    <filter>
      <filter-name>TemplateEngineFilter</filter-name>
      <filter-class>org.fusesource.scalate.servlet.TemplateEngineFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>TemplateEngineFilter</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
