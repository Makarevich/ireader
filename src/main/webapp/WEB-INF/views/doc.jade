!!! 5
html(lang="en")
  head
    link(rel='stylesheet' href='webjars/foundation/5.4.5/css/foundation.min.css')
    link(rel='stylesheet' href='doc.css')
    script(type='text/javascript' src='webjars/jquery/2.1.0/jquery.min.js')
    script(type='text/javascript' src='js/query-lib.js')
    script(type='text/javascript' src='js/start-time.js')
    script(type='text/javascript' src='js/doc.js')
    :javascript
      function init_all() {
        setup_page_reloader()
        get_doc_info($('#header'))
      }
      $(init_all)
  body
    #header
      .loading
        h4 Loading...
      .initial
        .row
          .column.small-8
            h4#title
          .column.small-4
            button#enabler.button.alert
              | Enable tracking
      .detailed
        .row
          .column.small-6
            button.button Read!
          .column.small-4
            .row
              .column.small-3
                label.inline(for='base')
                  | Base
                label.inline(for='halflife')
                  | Halflife
              .column.small-9
                input#base(type='text' placeholder='base')
                input#halflife(type='text' placeholder='halflife')
          .column.small-2
            button#saver.button Save
